  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/praizjosh/create-figma-react-plugin/issues"
  },
  "homepage": "https://github.com/praizjosh/create-figma-react-plugin#readme",
  "dependencies": {
    "fs-extra": "^11.3.1",
    "inquirer": "^12.9.4"
  },
  "devDependencies": {

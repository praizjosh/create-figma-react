{
  "name": "my-vite-plugin",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "keywords": [
    "figma",
    "plugin",
    "react",
    "vite",
    "boilerplate",
    "starter",
    "create",
    "quick start",
    "template"
  ],
  "scripts": {
    "dev": "npm run start",
    "build": "tsc -b && vite build --emptyOutDir=false && npm run build:main",
    "build:main": "esbuild plugin-src/code.ts --bundle --outfile=dist/code.js",
    "build:main:watch": "esbuild plugin-src/code.ts --bundle --outfile=dist/code.js --watch",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --max-warnings=0 --no-warn-ignored",
    "lint:debug": "eslint --ext .jsx,.js,.ts,.tsx ./src --debug --max-warnings=0",
    "lint:fix": "npx eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix --max-warnings=0 --no-warn-ignored",
    "prepare": "husky",
    "preview": "vite preview",
    "start": "concurrently -n tsc,build,vite -c yellow,blue,green \"npm run tsc:watch\" \"npm run build:main:watch\" \"vite\"",
    "tsc:watch": "tsc -b --watch --preserveWatchOutput"
  },
  "bin": {
    "create-figma-react-plugin": "./bin/create-figma-react-plugin.js"
  },
  "files": [
    "bin",
    "template"
  ],
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@figma/eslint-plugin-figma-plugins": "^0.16.1",
    "@figma/plugin-typings": "^1.117.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.5",
    "prettier": "3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "prettier --write \"src/**/*.{js,jsx,ts,tsx}\" --config ./.prettierrc"
    ]
  }
}
